# Database
DATABASE_URL="file:./prisma/dev.db"

# Public app URL used to construct redirect links
PUBLIC_APP_URL="http://localhost:5173"

# OIDC configuration
OIDC_ISSUER="https://example.okta.com/"
OIDC_CLIENT_ID="xxxxxxxxxxxxxxxx"
OIDC_CLIENT_SECRET="xxxxxxxxxxxxxxxx"
OIDC_REDIRECT_URI="http://localhost:5173/auth/oidc/callback"
OIDC_PROVIDER_NAME="oidc"

# Puppeteer cache configuration (overrides defaults from devcontainer)
PUPPETEER_PRODUCT="chrome-headless-shell"
PUPPETEER_CACHE_DIR=".cache/puppeteer"

# Storage for generated invoices (absolute or relative path)
FILES_DIR="./.cache/invoices"

# Logging
LOG_LEVEL="info"
